# ─── Database ───────────────────────────────────────────────
DATABASE_URL="postgresql://postgres:password@localhost:5432/saudi_trip_planner?schema=public"

# ─── Server ────────────────────────────────────────────────
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# ─── Google Places API ─────────────────────────────────────
# Obtain from: https://console.cloud.google.com/apis/credentials
# Enable: Places API (New) — you need a billing-enabled project
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# ─── Rate Limiting ─────────────────────────────────────────
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ─── Cache TTL (seconds) ──────────────────────────────────
CACHE_TTL_PLACES=3600
CACHE_TTL_ITINERARY=1800

# ─── Optional: Future Provider Keys ───────────────────────
# BOOKING_AFFILIATE_ID=
# MUSEMENT_API_KEY=
# SAUDI_TOURISM_API_KEY=
